{
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "no-restricted-globals": [
            "error",
            "name",
            "length"
        ],
        "prefer-arrow-callback": "error",
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "max-len": [
            "error",
            {
                "code": 100,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "**/*.spec.*"
            ],
            "env": {
                "mocha": true
            },
            "rules": {}
        }
    ],
    "globals": {}
}